# CAF-GPT Email Agent Configuration
# Copy this to .env and fill in your actual values

# Email Module - IMAP Settings (Purelymail)
EMAIL__IMAP_HOST=imap.purelymail.com
EMAIL__IMAP_PORT=993
EMAIL__IMAP_USERNAME=app@caf-gpt.com
EMAIL__IMAP_PASSWORD=your-imap-password

# Email Module - SMTP Settings
EMAIL__SMTP_HOST=smtp.purelymail.com
EMAIL__SMTP_PORT=587
EMAIL__SMTP_USERNAME=app@caf-gpt.com
EMAIL__SMTP_PASSWORD=your-smtp-password

# Email Module - Processing Settings
EMAIL__DELETE_AFTER_PROCESS=true
EMAIL__EMAIL_PROCESS_INTERVAL=30

# LLM Module - OpenRouter API
LLM__OPENROUTER_API_KEY=your-openrouter-api-key-here
LLM__OR_PACE_MODEL=xai/grok-4-fast

# Storage Module - S3 Compatible (Cloudflare R2, MinIO, or AWS S3)
STORAGE__S3_BUCKET_NAME=your-bucket-name
STORAGE__S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
STORAGE__S3_ACCESS_KEY=your-s3-access-key
STORAGE__S3_SECRET_KEY=your-s3-secret-key
STORAGE__S3_REGION=auto  # Use 'auto' for R2, or your AWS region

# App-level Settings
DEV_MODE=true
