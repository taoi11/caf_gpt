# CAF-GPT Configuration Example
# Copy this file to .env and fill in your actual values

# ===== Development Mode =====
DEV_MODE=false

# ===== Email Configuration (IMAP) =====
EMAIL__IMAP_HOST=imap.purelymail.com
EMAIL__IMAP_PORT=993
EMAIL__IMAP_USERNAME=app@caf-gpt.com
EMAIL__IMAP_PASSWORD=your-imap-password

# Email processing interval in seconds (default: 30)
EMAIL__EMAIL_PROCESS_INTERVAL=30

# ===== Email Configuration (SMTP) =====
EMAIL__SMTP_HOST=smtp.purelymail.com
EMAIL__SMTP_PORT=587
EMAIL__SMTP_USERNAME=app@caf-gpt.com
EMAIL__SMTP_PASSWORD=your-smtp-password
EMAIL__SMTP_USE_TLS=true
EMAIL__SMTP_USE_SSL=false

# ===== LLM Configuration =====
# OpenRouter API key (required for all LLM calls)
LLM__OPENROUTER_API_KEY=your-openrouter-api-key-here

# Default model for general use
LLM__OPENROUTER_MODEL=x-ai/grok-code-fast-1

# Agent-specific models (each agent can use a different model)
LLM__PACENOTE_MODEL=anthropic/claude-haiku-4.5
LLM__PRIME_FOO_MODEL=google/gemini-3-pro-preview
LLM__LEAVE_FOO_MODEL=x-ai/grok-4.1-fast

# LLM behavior settings
LLM__TEMPERATURE=0.7
LLM__REQUEST_TIMEOUT_SECONDS=60.0

# ===== Storage Configuration (S3) =====
STORAGE__S3_BUCKET_NAME=policies
STORAGE__S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
STORAGE__S3_ACCESS_KEY=your-s3-access-key
STORAGE__S3_SECRET_KEY=your-s3-secret-key
STORAGE__S3_REGION=auto
# Set to true for some S3-compatible services (e.g., MinIO)
STORAGE__USE_PATH_STYLE_ENDPOINT=false

# ===== Logging Configuration =====
LOG__LOG_LEVEL=INFO
